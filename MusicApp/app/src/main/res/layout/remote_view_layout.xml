<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/rl_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_art"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/iv_art"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music App"
                android:textColor="#757575"
                />
            <TextView
                android:id="@+id/tv_name_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textSize="15dp"
                android:textColor="#212121"
                />
            <TextView
                android:id="@+id/tv_name_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textSize="13dp"
                android:textColor="#424242"
                />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_clear_black_48dp"
        android:id="@+id/iv_dismiss"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_shuffle_false"
        android:padding="5dp"
        android:layout_below="@+id/rl_content"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_play_pause"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"

            android:src="@drawable/pause" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next" />
    </RelativeLayout>

</RelativeLayout>