<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">
    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back_toolbar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Album"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        android:layout_below="@+id/ll_back"
        android:layout_margin="15dp">
        <ImageView

            android:id="@+id/iv_art_content_album"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_albums"
           />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_below="@+id/ll_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_album"
        android:layout_toRightOf="@+id/card"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_artists"
        android:layout_below="@+id/tv_name_album"
        android:layout_toRightOf="@+id/card"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_content_album"
        android:layout_below="@+id/card">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>