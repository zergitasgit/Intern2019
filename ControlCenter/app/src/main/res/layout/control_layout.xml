<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888878">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_state"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/colorGray"
        app:cardCornerRadius="15dp">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <ToggleButton
                android:id="@+id/tb_plane"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_plane"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/tb_sync"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tb_plane"
                android:background="@drawable/custom_sync"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/tb_wifi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/custom_wifi"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/tb_bluetooth"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tb_wifi"
                android:background="@drawable/custom_bluetooth"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_music"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@+id/cv_state"
        android:backgroundTint="@color/colorGray"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="15dp">

            <Button
                android:id="@+id/btn_setting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_setting"
                android:scaleX="1.5"
                android:scaleY="1.5" />

            <Button
                android:id="@+id/btn_previous"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_previous"
                android:scaleX="1.5"
                android:scaleY="1.5" />

            <Button
                android:id="@+id/btn_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/btn_previous"
                android:background="@drawable/ic_play"
                android:scaleX="1.5"
                android:scaleY="1.5" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/btn_play"
                android:background="@drawable/ic_next"
                android:scaleX="1.5"
                android:scaleY="1.5" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ToggleButton
        android:id="@+id/tb_rotate"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/cv_state"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="-100dp" />

    <ToggleButton
        android:id="@+id/tb_mute"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/cv_state"
        android:layout_marginBottom="-99dp"
        android:layout_toRightOf="@+id/tb_rotate" />

    <Button
        android:id="@+id/btn_time_out"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@+id/tb_rotate"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="-65dp"
        android:text="Time Out" />

    <ToggleButton
        android:id="@+id/tb_flash_light"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/btn_time_out"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="-77dp" />

    <Button
        android:id="@+id/btn_clock"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/btn_time_out"
        android:layout_marginBottom="-77dp"
        android:layout_toRightOf="@+id/tb_flash_light" />

    <Button
        android:id="@+id/btn_calculator"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/btn_time_out"
        android:layout_marginBottom="-77dp"
        android:layout_toRightOf="@+id/btn_clock" />

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/btn_time_out"
        android:layout_marginBottom="-77dp"
        android:layout_toRightOf="@+id/btn_calculator" />


</RelativeLayout>