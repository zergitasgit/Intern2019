<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/icon_background_lock"
              android:id="@+id/ln_lock"
              android:weightSum="10">
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="8"
                  android:orientation="vertical">


        <RelativeLayout
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background"
                android:layout_width="50dp"
                android:layout_marginRight="10dp"
                android:layout_height="50dp">
            <ImageView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="20dp"
                    android:src="@drawable/icon_lock"
                    android:layout_height="30dp"/>
        </RelativeLayout>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:text="10:10"
                  android:textSize="70dp"
                  android:textColor="#FFFF"
                  android:id="@+id/tv_time"
        />
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="#FFFF"
                android:text="Thứ Tư,5 tháng 8"
                android:id="@+id/tv_date"/>
    </LinearLayout>

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="2">
        <RelativeLayout
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background"
                android:layout_width="50dp"
                android:layout_height="50dp">
            <ImageView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="20dp"
                    android:src="@drawable/icon_flash"
                    android:layout_height="30dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/rl_camera"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background"
                android:layout_width="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="50dp">
            <ImageView
                    android:id="@+id/img_camera"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="20dp"
                    android:src="@drawable/icon_camera"
                    android:layout_height="30dp"/>
        </RelativeLayout>
        <Button android:background="@drawable/while_round_bg"
              android:layout_width="200dp" android:layout_height="6dp"
              android:layout_alignParentBottom="true"
              android:layout_centerHorizontal="true"
              android:layout_marginBottom="10dp"/>
    </RelativeLayout>
</LinearLayout>