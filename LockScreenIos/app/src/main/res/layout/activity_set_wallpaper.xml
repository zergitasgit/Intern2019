<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.wallpaper.Wallpaper"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#FFF">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f3f3f3">

        <LinearLayout
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_ic_back22" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/small"
                    android:text="Settings"
                    android:textColor="#196CFF"
                    android:textSize="15sp" />
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/small"
                android:text="Set Your Wallpaper"
                android:textColor="#000"
                android:textSize="17sp" />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_select_from"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_selector"
            android:clickable="true">
        <View
                android:layout_alignParentTop="true"
                android:layout_width="match_parent" android:layout_height="1dp"
                android:background="#c8c8c8"/>
        <ImageView
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:src="@drawable/ic_icon_album2"
                android:id="@+id/img_icon_main1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
        />
        <TextView
                android:fontFamily="@font/small"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/img_icon_main1" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select From Gallery"
                android:textColor="#03A9F4"
                android:layout_centerVertical="true"
                android:textSize="16sp"/>
        <ImageView
                android:padding="5dp"
                android:src="@drawable/ic_ic_next"
                android:layout_centerVertical="true"  android:layout_width="35dp"
                android:layout_height="23dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
android:layout_marginTop="5dp"
            android:background="#FFF"
            android:id="@+id/rv_wallpaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>