<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".screens.password.PasswordActivity"
        android:orientation="vertical"
        android:background="#f1f0f6">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:background="#ffff">

        <LinearLayout
                android:clickable="true"
                android:id="@+id/img_back"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="25dp" android:layout_height="50dp"
                    android:src="@mipmap/ic_back22"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Setting"
                      android:layout_gravity="center_vertical"
                      android:textColor="#196CFF"
                      android:textSize="15sp"/>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Password"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:textSize="17sp"/>
    </RelativeLayout>
    <RelativeLayout
            android:background="#ffff"
            android:layout_marginTop="30dp" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:layout_marginLeft="20dp" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Uses Password"
                  android:textSize="17sp"
                  android:layout_centerVertical="true"
                  android:textColor="#000"/>

        <com.suke.widget.SwitchButton android:id="@+id/switch_pass"
                                      android:layout_marginRight="10dp"
                                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:layout_alignParentRight="true"
                                      android:layout_centerVertical="true"
                                      app:sb_show_indicator="false"
        />
    </RelativeLayout>
    <!--<LinearLayout-->
    <!--android:clickable="true"-->
    <!--android:id="@+id/ln_change_pass"-->
    <!--android:layout_marginTop="5dp"-->
    <!--android:background="@drawable/button_selector"  android:layout_width="match_parent" android:layout_height="50dp">-->
    <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
    <!--android:text="Change Password"-->
    <!--android:layout_marginLeft="20dp"-->
    <!--android:layout_gravity="center_vertical"-->
    <!--android:textSize="18sp"-->
    <!--android:textColor="#03A9F4"/>-->
    <!--</LinearLayout>-->
    <RelativeLayout
            android:id="@+id/ln_change_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_selector"
            android:clickable="true">
        <View
                android:layout_marginLeft="70dp"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent" android:layout_height="2dp"
                android:background="#f1f0f6"/>
        <ImageView
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:src="@drawable/icon_key"
                android:id="@+id/img_icon_main1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
        />
        <TextView
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/img_icon_main1" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textColor="#03A9F4"
                android:layout_centerVertical="true"
                android:textSize="16sp"/>
        <ImageView
                android:padding="5dp"
                android:src="@mipmap/ic_next"
                android:layout_centerVertical="true" android:layout_width="wrap_content" android:layout_height="40dp"
                android:layout_alignParentRight="true"/>
        <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent" android:layout_height="2dp"
                android:background="#f1f0f6"/>
    </RelativeLayout>

</LinearLayout>