<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="6dp"
              android:background="@drawable/noti_round_bg"
              android:layout_marginHorizontal="5dp"


>
    <RelativeLayout
            android:layout_marginLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"
    >
        <TextView
                android:textColor="#555050"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_title_app"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Facebook"
                android:textSize="15sp"/>

        <TextView
                android:textStyle="bold"
                android:id="@+id/tv_text_title_noti"

                android:layout_below="@+id/tv_title_app"
                android:textSize="17sp"
                android:textColor="#000"
                android:text="Nhiệm Vũ"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginBottom="10dp"
                android:textColor="#000"
                android:id="@+id/tv_content_noti"
                android:textSize="14sp"
                android:text="Đã gửi 1 tin nhắn"
                android:layout_below="@id/tv_text_title_noti"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>