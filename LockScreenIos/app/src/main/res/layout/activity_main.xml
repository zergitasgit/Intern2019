<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/layout_ads"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layout_ads">

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                tools:context=".screens.main.MainActivity">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">


                <ImageView
                        android:id="@+id/img_main"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/background_lock" />

                <ToggleButton
                        android:id="@+id/btn_main"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_main"
                        android:checked="true"
                        android:textOff=""
                        android:textOn="" />


            </FrameLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/big"
                    android:text="Settings"
                    android:textColor="#415ada"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            <RelativeLayout
                    android:id="@+id/rl_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_selector"
                    android:clickable="true">

                <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:background="#c8c8c8" />

                <ImageView
                        android:id="@+id/img_icon_main"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_icon_pass2" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/img_icon_main"
                        android:fontFamily="@font/small"
                        android:text="Password"
                        android:textColor="#010101"
                        android:textSize="16sp" />

                <ImageView
                        android:layout_width="35dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_ic_next" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="70dp"
                        android:background="#c8c8c8" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rl_wallpaer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_selector"
                    android:clickable="true">

                <ImageView
                        android:id="@+id/img_icon_main1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_icon_wallpaper2" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/img_icon_main1"
                        android:fontFamily="@font/small"
                        android:text="Wallpaper"
                        android:textColor="#010101"
                        android:textSize="16sp" />

                <ImageView
                        android:layout_width="35dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_ic_next" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="70dp"
                        android:background="#c8c8c8" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rl_cancle_lock"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_selector"
                    android:clickable="true">

                <ImageView
                        android:id="@+id/img_icon_main3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_icon_setting" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/img_icon_main3"
                        android:fontFamily="@font/small"
                        android:text="Disable system lockscreen"
                        android:textColor="#010101"
                        android:textSize="16sp" />

                <ImageView
                        android:layout_width="35dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_ic_next" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="70dp"
                        android:background="#c8c8c8" />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rl_noti"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_selector"
                    android:clickable="true">

                <ImageView
                        android:id="@+id/img_icon_main2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_icon_noiti2" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/img_icon_main2"
                        android:fontFamily="@font/small"
                        android:text="Notification"
                        android:textColor="#010101"
                        android:textSize="16sp" />

                <ImageView
                        android:id="@+id/img_swith_noti"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:src="@drawable/ic_ic_off_2" />

                <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#c8c8c8" />
            </RelativeLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/big"
                    android:text="Others"
                    android:textColor="#415ada"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            <RelativeLayout
                    android:id="@+id/rl_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_selector"
                    android:clickable="true">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:background="#c8c8c8" />

                <ImageView
                        android:id="@+id/img_icon_main4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_icon_feedback" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/img_icon_main4"
                        android:fontFamily="@font/small"
                        android:text="Feedback"
                        android:textColor="#010101"
                        android:textSize="16sp" />

                <ImageView
                        android:layout_width="35dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_ic_next" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="70dp"
                        android:background="#c8c8c8" />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rl_share"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_selector"
                    android:clickable="true">

                <ImageView
                        android:id="@+id/img_icon_main5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_icon_share" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/img_icon_main5"
                        android:fontFamily="@font/small"
                        android:text="Share"
                        android:textColor="#010101"
                        android:textSize="16sp" />

                <ImageView
                        android:layout_width="35dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_ic_next" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="70dp"
                        android:background="#c8c8c8" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rl_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_selector"
                    android:clickable="true">

                <ImageView
                        android:id="@+id/img_icon_main9"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_icon_baomat" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/img_icon_main9"
                        android:fontFamily="@font/small"
                        android:text="Privacy Policy"
                        android:textColor="#010101"
                        android:textSize="16sp" />

                <ImageView
                        android:layout_width="35dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_ic_next" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#c8c8c8" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
