<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.password.NewPassword"
        android:orientation="vertical"
        >
    <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/background_lock1"
            android:id="@+id/img_newpass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:background="#f3f3f3">
        <LinearLayout
                android:layout_centerVertical="true"
                android:clickable="true"
                android:id="@+id/img_back"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_ic_back22"
            />
            <TextView
                     android:fontFamily="@font/small"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Settings"
                      android:layout_gravity="center_vertical"
                      android:textColor="#196CFF"
                      android:textSize="15sp"/>
        </LinearLayout>
        <TextView
                android:fontFamily="@font/small"
                android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set New Password"
                android:textColor="#000"
                android:textSize="17sp"/>
    </RelativeLayout>

    <EditText
            android:fontFamily="@font/small"
            android:textAlignment="center"
            android:textSize="15sp"
            android:background="@drawable/edittext"
            android:layout_marginHorizontal="20dp"
            android:maxLength="6"
            android:id="@+id/edt_pass_new"
            android:layout_marginTop="20dp"
            android:hint="Enter new password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="numberPassword"

    />
    <EditText
            android:fontFamily="@font/small"
            android:textAlignment="center"
            android:textSize="15sp"
            android:background="@drawable/edittext"
            android:layout_marginHorizontal="20dp"
            android:maxLength="6"
            android:inputType="numberPassword"
            android:id="@+id/edt_pass_again_new"
            android:layout_marginTop="20dp"
            android:hint="Confirm password"
            android:layout_width="match_parent"
            android:layout_height="40dp"


    />
    <Button
            android:textColor="#FFF"
            android:fontFamily="@font/small"
            android:background="@drawable/buttonconfi"
            android:id="@+id/btn_confirm_new"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp" android:layout_height="40dp"
    android:text="confirm"/>

    </LinearLayout>
</FrameLayout>