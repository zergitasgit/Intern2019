<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:src="@drawable/background_lock1"
            android:id="@+id/img_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/ln_lock"
                  android:weightSum="10">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:background="#000">
            <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/img_song" android:layout_width="40dp"

                    android:layout_height="match_parent"
                    android:src="@drawable/icon_song"/>

            <TextView
                    android:layout_centerVertical="true"
                    android:text="41%"
                    android:textColor="#FFFF"
                    android:textSize="13sp"
                    android:layout_toLeftOf="@id/img_pin"
                    android:id="@+id/tv_pin"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
            />
            <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/img_pin"
                    android:src="@drawable/icon_pin60"
                    android:layout_alignParentRight="true"
                    android:layout_width="40dp" android:layout_height="match_parent"/>

        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="9"
                      android:orientation="vertical"
                      android:weightSum="10">
            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                          android:layout_weight="8"
                          android:orientation="vertical"
            >


                <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="50dp"
                        android:src="@drawable/a1"
                        android:layout_height="50dp"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:text="10:10"
                          android:textSize="70dp"
                          android:textColor="#FFFF"
                          android:id="@+id/tv_time"
                />
                <TextView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp"
                        android:textColor="#FFFF"
                        android:text="Thứ Tư,5 tháng 8"
                        android:id="@+id/tv_date"/>
            </LinearLayout>
            <TextView
                    android:fontFamily="@font/small"
                    android:layout_width="wrap_content" android:layout_height="0dp"
                      android:layout_weight="2"
                      android:text="Do you use this picture?"
                      android:textSize="25sp"
                      android:textColor="#FFF"
                      android:textStyle="bold"
                      android:layout_gravity="center_horizontal"/>
        </LinearLayout>

