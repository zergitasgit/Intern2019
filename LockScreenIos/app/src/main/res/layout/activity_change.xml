<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".screens.password.NewPassword">

    <RelativeLayout
            android:id="@+id/layout_ads"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layout_ads">
        <ImageView
                android:id="@+id/img_change"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_lock1"
                android:scaleType="fitXY" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#f3f3f3">

                <LinearLayout
                        android:id="@+id/img_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_ic_back22" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/small"
                            android:text="Settings"
                            android:textColor="#196CFF"
                            android:textSize="15sp" />
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/small"
                        android:text="Set New Password"
                        android:textColor="#000"
                        android:textSize="17sp" />
            </RelativeLayout>

            <EditText
                    android:id="@+id/edt_pass_old"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext"
                    android:hint="Confirm old password"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:textAlignment="center"
                    android:textSize="15sp"

                    />

            <EditText
                    android:id="@+id/edt_pass_new"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext"
                    android:hint="Enter your new password"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:textAlignment="center"
                    android:textSize="15sp"

                    />

            <EditText
                    android:id="@+id/edt_pass_again_new"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext"
                    android:hint="Confirm password"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:textAlignment="center"
                    android:textSize="15sp"


                    />

            <Button
                    android:id="@+id/btn_confirm_new"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/buttonconfi"
                    android:text="confirm"
                    android:textColor="#FFF" />
        </LinearLayout>

    </FrameLayout>



</RelativeLayout>