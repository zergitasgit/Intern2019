<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    tools:context=".activity.SplashActivity"
    android:background="@drawable/bg">


    <LinearLayout
        android:id="@+id/ll_per"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="104dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_bg"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="App Lock"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Protect your apps - Protect your secret !"
            android:layout_marginBottom="10dp"
            android:textColor="#fff">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="vertical"
            android:layout_margin="30dp"
            android:background="@drawable/bg_rl_per">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="You need to give some permissions to the"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#fff"
                android:layout_marginTop="30dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="AppLock for Sercurity Policies"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginBottom="10dp"
                android:textSize="15dp">

            </TextView>

            <RelativeLayout
                android:id="@+id/rl_draw"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"

                android:background="@drawable/bg_per">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:textColor="#EBEBEB"
                    android:text="Permit drawing over other app">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="19dp"
                    android:text=">"
                    android:textColor="#EBEBEB">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_use"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_per">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#EBEBEB"
                    android:layout_margin="10dp"
                    android:text="Permit accsing usege starts">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="19dp"
                    android:text=">"
                    android:textColor="#EBEBEB">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_pattern"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#303030"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="104dp" />

        <TextView
            android:id="@+id/tv_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="Creat a Pattern"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_pass_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="Pattern Wrong"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <com.andrognito.patternlockview.PatternLockView
            android:id="@+id/patter_lock_view"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="290dp"
            app:aspectRatio="square"
            app:aspectRatioEnabled="true"
            app:dotAnimationDuration="150"
            app:dotCount="3" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mine_shaft"
        tools:context="com.andrognito.pinlockviewapp.SampleActivity">

        <ImageView
            android:id="@+id/iv_pin"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="104dp">

        </ImageView>

        <TextView
            android:id="@+id/tv_pass_pin"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_pin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="Creat a Pin"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_pass_pin_wrong"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_pin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="Pin Wrong"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <com.andrognito.pinlockview.IndicatorDots
            android:id="@+id/indicator_dots_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="290dp" />

        <com.andrognito.pinlockview.PinLockView
            android:id="@+id/pin_lock_view_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/indicator_dots_pin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:keypadButtonSize="72dp"
            app:keypadDeleteButtonPressedColor="#4aa8ff"
            app:keypadHorizontalSpacing="20dp"
            app:keypadShowDeleteButton="true"
            app:keypadTextColor="@color/white"
            app:keypadTextSize="18dp"
            app:keypadVerticalSpacing="20dp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>